<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SATOMI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SATOMI"
    xmlns:pages="clr-namespace:SATOMI.Pages"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="Black"
    Padding="0"
    Title="SATOMI">

    <ShellContent
        ContentTemplate="{DataTemplate pages:ViewerPage}"
        Route="ViewerPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate pages:BrowserPage}"
        Route="BrowserPage"/>
</Shell>
